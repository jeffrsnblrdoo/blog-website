<% if (locals.username && locals.message) { %>
    <section class="d-flex justify-content-center">
        <div class="card" style="width: 18rem">
          <div class="card-body">
            <h5 class="card-title"><%= username %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= date %></h6>
            <p class="card-text">
              <%= message %>
            </p>
          </div>
        </div>
      </section>
<% } else { %>
    <p>No post yet.</p>
<% } %>

